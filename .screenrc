vbell on
vbell_msg "<<beep>>"

backtick 0 30 30 sh -c 'uptime -p | sed "s/ days/d/" | sed "s/ day/d/" | sed "s/ hours/h/" | sed "s/ hour/h/" | sed "s/ minutes/m/" | sed "s/ minute/m/"'
backtick 1 30 30 sh -c 'expr `cat /sys/class/thermal/thermal_zone0/temp` / 1000'
hardstatus alwayslastline "%{= KW} %` @ %1`degC %{= Kw}|%{-} %-Lw%{= BW}%n%f %t%{-}%+Lw %=%c:%s"

screen -t "bash" 1
stuff "cd ~^Mclear^M"
screen -t "bash" 2
stuff "cd ~^Mclear^M"
screen -t "bash" 2
stuff "cd ~^Mclear^M"
screen -t "top" 4
stuff "top^M"

bind ' ' windowlist -b
defscrollback 6000
startup_message off
#autodetach on
altscreen on

