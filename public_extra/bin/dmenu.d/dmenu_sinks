#!/usr/bin/bash

# Senan Kelly 2016
# mostly: https://gist.github.com/Nervengift/844a597104631c36513c

awk_pat='/^sink/ {s=$1" "$2;getline;gsub(/^ +/,"",$0);print s" "$0}'
sink=$(ponymix -t sink list | awk "$awk_pat" | dmenu_custom -p "default:" | grep -Po '[0-9]+(?=:)') &&

ponymix set-default -d $sink &&
for input in $(ponymix list -t sink-input | grep -Po '[0-9]+(?=:)'); do 
	ponymix -t sink-input -d $input move $sink
done
