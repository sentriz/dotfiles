#!/bin/bash

irc() {
    until ssh osmc -t TERM=screen screen -R -S weechat weechat; do
        sleep 300
        echo "waiting for ssh agent"
    done
}

export -f irc

case "$1" in 
    kpcli)
        #            red
        urxvtc -bg "#220000" -name kpcli -e kpcli --kdb ~/mega/senan_kelly.kdbx
        ;;
    weechat)
        #            blue
        urxvtc -bg "#000022" -name weechat -hold -e bash -c irc
        ;;
    *)
        #            grey
        urxvtc -bg "#303030" -name scratch
        ;;
esac
