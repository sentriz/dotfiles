#!/bin/bash

SSH_AUTH_SOCK = /run/user/1000/keeagent.socket

if (! grep -qs "10.0.0.1" /tmp/osmc_host) && [ -S "$SSH_AUTH_SOCK" ]; then
    notify-send "starting dock"
    mpd --kill &> /dev/null
    fusermount -qu /home/senan/dynamic -z
    nmcli device connect enp0s25 &> /dev/null
    mount /home/senan/dynamic
    mpd
fi

projector
