markup=pango

[volume]
signal=1
label=sound
instance=Master
interval=once
command=~/.config/i3blocks/blocklets/volume

[wifi]
signal=2
label=wifi
instance=wlp4s0
interval=5
command=~/.config/i3blocks/blocklets/wifi

[vpn]
label=vpn
interval=5
color=#f24b74
command=~/.config/i3blocks/blocklets/vpn

[load]
signal=3
label=load
interval=5
command=~/.config/i3blocks/blocklets/load

[battery]
signal=4
interval=5
label=battery
