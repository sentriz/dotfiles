separator_block_width=15
markup=pango

[volume]
signal=1
label=sound
instance=Master
interval=once
command=~/.config/i3blocks/blocklets/volume

[wifi]
signal=2
label=wifi
instance=wlp4s0
interval=5
command=~/.config/i3blocks/blocklets/wifi

[load]
signal=3
label=load
interval=5
command=~/.config/i3blocks/blocklets/load

[battery]
signal=4
interval=5
label=battery
instance=1
color=#e184c2
command=~/.config/i3blocks/blocklets/battery

[boi_balance]
interval=900
color=#ffff00
label=balance
signal=5
command=~/.config/i3blocks/blocklets/balance

[time]
signal=6
interval=10
command=date "+%A %d %B, %H:%M" | tr '[:upper:]' '[:lower:]'
