# vim: ft=sh

source ~/.xprofile

xrandr --output LVDS1 --primary &
~/dev/github/lock/lock.sh --update "$(find ~/pictures/wallpapers_on/* | shuf -n 1)" &
feh --bg-scale "$(find ~/pictures/wallpapers_on/* | shuf -n 1)" &
thinkpad-touchpad off &
# compton --config ~/.config/compton.conf -b &
urxvtd &
/usr/lib/xfce-polkit/xfce-polkit &
thunar --daemon &
redshift-gtk &
dunst &
clipit &
xss-lock -- ~/dev/github/betterlockscreen/lock.sh -l &
#xdotool behave_screen_edge bottom-right exec --sync ~/bin/lock &

exec i3
