#vim ft=sh

case $HOSTNAME in
    manjaro)
        main_string="\[$BIGreen\]\u\[$White\]@\h"
        ;;
    osmc)
        main_string="\[$BIYellow\]\u\[$White\]@\h"
        ;;
    shmig)
        main_string="\[$BIRed\]\u\[$White\]@\h"
        ;;
    *)
        main_string="\[$BIWhite\]\u\[$White\]@\h"
        ;;
esac

git_branch='$(git branch 2> /dev/null | grep -e ^* | sed -E s/^\\\\\*\ \(.+\)$/\ \\\\\1\\/ )'
export PS1="$main_string \[$CBlue\]\w\[$Red\]$git_branch \[$White\]\$\[$Reset\]\[\a\] "
