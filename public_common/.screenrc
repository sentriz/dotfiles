vbell_msg "bell: window ~%"
vbellwait 2
vbell off
term "rxvt-unicode-256color"

backtick 0 30 30 sh -c 'uptime -p | sed "s/ weeks/w/" | sed "s/ week/w/" | sed "s/ days/d/" | sed "s/ day/d/" | sed "s/ hours/h/" | sed "s/ hour/h/" | sed "s/ minutes/m/" | sed "s/ minute/m/"'
hardstatus alwayslastline "%` | %-Lw%{= Wk}%n%f %t%{-}%+Lw %=[%H] %c:%s"
rendition so "="

bind ' ' windowlist -b
bind z prev
bind x next

screen -t bash
screen -t bash
screen -t vim
screen -t ssh
screen -t mutt
screen -t pacman
screen -t dot

defscrollback 50000
startup_message off
altscreen on

defbce on
