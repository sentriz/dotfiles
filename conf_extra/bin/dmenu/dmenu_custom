#!/usr/bin/env bash

if ! type -p wofi >/dev/null; then
    echo "please install wofi" >&2
    echo "https://hg.sr.ht/~scoopta/wofi" >&2
    exit 1
fi

pkill --exact wofi
wofi \
    --dmenu \
    --insensitive \
    --location 2 \
    --yoffset 16 \
    --style "$(dirname "$(realpath "$0")")/css" \
    --term "$TERMINAL" \
    "$@"
