#!/usr/bin/env fish

echo $argv | read cmd src audio
test -z $cmd; and exit 1

switch $cmd
    case start
        set -l filename "$DOTS_RECORDINGS_DIR/"(date '+%Y%m%d_%H%M%S.mp4')

        set -l area (area $src)
        test -z "$area"; and exit

        set -l audio_dev (pactl list short sources | grep -Po "\K[^\s]+\.monitor(?=.*IDLE)")

        test -n $audio -a -n $audio_dev
        and set audio_cmd "-a$audio_dev"

        wf-recorder $audio_cmd -f "$filename" -g "$area" --force-yuv >/dev/null 2>&1
        test ! -f "$filename"; and exit 1

        echo "$filename"
        notify-send recording done

    case stop
        killall --signal SIGINT wf-recorder
end
