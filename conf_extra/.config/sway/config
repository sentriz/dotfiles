## bindings: xf86
bindsym XF86AudioLowerVolume  exec amixer sset Master 5%-     && $up_block_1
bindsym XF86AudioRaiseVolume  exec amixer sset Master 5%+     && $up_block_1
bindsym XF86AudioMute         exec amixer sset Master toggle  && $up_block_1
bindsym XF86AudioMicMute      exec amixer sset Capture toggle
bindsym XF86MonBrightnessDown exec xbacklight -dec 5
bindsym XF86MonBrightnessUp   exec xbacklight -inc 5
bindsym XF86AudioPlay         exec playerctl play-pause
bindsym XF86AudioStop         exec playerctl stop
bindsym XF86AudioNext         exec playerctl next
bindsym XF86AudioPrev         exec playerctl previous

## bindings: programs
bindsym $super+Return exec $emulator
bindsym $super+F1     exec dmenu_package
bindsym $super+F2     exec dmenu_clipboard
bindsym $super+F3     exec dmenu_radio
bindsym $super+F4     exec dmenu_pulse && $up_block_1
bindsym $super+F5     exec dmenu_bluetooth && $up_block_2

## scratchpad
exec "while :; do $emulator --name scratchpad --exec 'tmux new -A -s scratchpad'; sleep 0.5; done"
for_window  [app_id="^scratchpad$"] floating enable, move scratchpad, border pixel 2
bindcode 66 [app_id="^scratchpad$"] scratchpad show, resize set 1334 550, move position center

## autostarts
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec kanshi
exec wl-gammactld
exec wl-paste \
    --type text \
    --watch \
    clipman store --max-items 500
exec wl-paste \
    --primary \
    --type text \
    --watch \
    clipman store --max-items 500
exec clipman restore
exec swayidle -w \
    timeout 290  "notify-send.sh 'locking screen in 10 seconds'" \
    timeout 300  "$lock" \
    before-sleep "$lock"
exec mako \
    --background-color "$grey" \
    --margin "$default_gap,0" \
    --font "$default_font" \
    --border-size 4 \
    --border-color "#FFFFFF" \
    --text-color "#FFFFFF" \
    --anchor bottom-right \
    --ignore-timeout 1 \
    --default-timeout 4000
