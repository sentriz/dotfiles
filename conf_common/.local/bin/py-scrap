#!/usr/bin/env bash

if test ! -d "$DOTS_SCRAP_DIR"; then
    echo "DOTS_SCRAP_DIR not found" >&2
    exit 1
fi

dir="$(mktemp -d "$DOTS_SCRAP_DIR/python.XXXX")"
cd "$dir" || exit 1

file="main.py"

cat >"$file" <<EOL
# $ cd "$dir"; and python "$file"

def main():
    pass

if __name__ == "__main__":
    main()
EOL

git init
git add -A
git commit -m "init"

nvim "$file"
