#!/usr/bin/env bash

if test ! -d "$DOTS_SCRAP_DIR"; then
    echo "DOTS_SCRAP_DIR not found" >&2
    exit 1
fi

dir="$(mktemp -d "$DOTS_SCRAP_DIR/go.XXXX")"
cd "$dir" || exit 1

file="main.go"

cat >"$file" <<EOL
// $ cd "$dir"; and go run "$file"

package main

func main() {}
EOL

go mod init "${dir##*\.}"
git init
git add -A
git commit -m "init"

nvim "$file"
