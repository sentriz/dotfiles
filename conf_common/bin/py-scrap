#!/usr/bin/env bash

dir="$(mktemp -d "$DOTS_SCRAP_DIR/python.XXXX")"

file="main.py"
path="$dir/$file"

markerfile=".scrap"
markerpath="$dir/$markerfile"

touch "$markerpath"
cat >"$path" <<EOL
# $ cd "$dir"; and python "$file"

def main():
    pass

if __name__ == "__main__":
    main()
EOL

nvim "$path"
