#!/usr/bin/env bash

batt_level="$(cat /sys/class/power_supply/BAT*/uevent \
    | sed -rn 's/^POWER_SUPPLY_CAPACITY=([0-9]+)$/\1/p')"

test -z "$batt_level" \
    && exit
test "$batt_level" -ge "100" \
    && exit
test "$batt_level" -le "10" \
    && echo "battery ${batt_level}% âš " \
    || echo "battery ${batt_level}%"
