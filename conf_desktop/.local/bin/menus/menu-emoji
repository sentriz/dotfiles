#!/usr/bin/env bash

cache="$XDG_CACHE_HOME/emojis"
if [[ ! -f "$cache" ]]; then
    {
        echo "​	zero width space"
        echo "…	ellipsis"
        uni -c emoji all -f "%(emoji)%(tab)%(name), %(cldr_full)" | sed "s/    /\t/"
    } >"$cache"
fi

if [[ "$#" -gt 0 ]]; then
    col 1 <<<"$1" | wl-copy -n
    exit
fi

cat "$cache"
