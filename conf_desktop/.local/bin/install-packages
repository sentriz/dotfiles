#!/usr/bin/env bash

set -e

export GIT_CONFIG_GLOBAL=/dev/null

if ! type -p yay >/dev/null; then
    sudo pacman -S --needed git base-devel
    git clone "https://aur.archlinux.org/yay-bin.git" /tmp/yay
    cd /tmp/yay || exit
    makepkg -si

    sudo pacman-key --recv-key FBA220DFC880C036 --keyserver keyserver.ubuntu.com
    sudo pacman-key --lsign-key FBA220DFC880C036
    sudo pacman -U 'https://cdn-mirror.chaotic.cx/chaotic-aur/chaotic-keyring.pkg.tar.zst' 'https://cdn-mirror.chaotic.cx/chaotic-aur/chaotic-mirrorlist.pkg.tar.zst'
    sudo tee -a /etc/pacman.conf <<-EOF
        [multilib]
        Include = /etc/pacman.d/mirrorlist
        [chaotic-aur]
        Include = /etc/pacman.d/chaotic-mirrorlist
EOF
    sudo pacman -Syu

    cd -
fi

function list() {
    grep -Po "^$1\s+\K.*" "$XDG_CONFIG_HOME/packages"
}

wanted=("${@:1}")
function want() {
    [[ "${#wanted[@]}" == 0 ]] && return
    for w in "${wanted[@]}"; do
        [[ "$w" == "$1" ]] && return
    done
    return 1
}

if want arch; then
    yay --version
    readarray -t pkgs < <(list arch)
    yay -S --needed --noconfirm "${pkgs[@]}"
fi

if want python; then
    python3 -m ensurepip
    python3 -m pip --version
    readarray -t pkgs < <(list python)
    python3 -m pip install --user --update --disable-pip-version-check --no-input "${pkgs[@]}"
fi

if want cargo; then
    cargo version
    readarray -t pkgs < <(list cargo)
    cargo install "${pkgs[@]}"
fi

if want go; then
    go version
    list go | while IFS='' read -r pkg; do
        go install "$pkg"
    done
fi

if want npm; then
    npm version
    readarray -t pkgs < <(list npm)
    npm install -g "${pkgs[@]}"
fi

if want flatpak; then
    flatpak --version
    flatpak remote-add --user --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo
    flatpak remote-add --user --if-not-exists flathub-beta https://flathub.org/beta-repo/flathub-beta.flatpakrepo
    readarray -t pkgs < <(list flatpak)
    flatpak install --user --noninteractive --assumeyes flathub "${pkgs[@]}"
    readarray -t pkgs < <(list flatpak-beta)
    flatpak install --user --noninteractive --assumeyes flathub-beta "${pkgs[@]}"
fi
