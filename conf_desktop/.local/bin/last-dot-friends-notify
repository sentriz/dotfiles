last-dot-friends -interval 60 -api-key "$(secret lastfm_api_key)" -api-secret "$(secret lastfm_api_secret)" "$(secret lastfm_friends)" | while IFS=$'\t' read -r username artist track; do
    notify-send --icon "$icon_path" --hint "string:x-dunst-stack-tag:$0" "$username" "$artist â€” $track"
    sleep 1.5
done
